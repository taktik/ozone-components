	"description": "JavaScript modules for Ozone",
	"scripts": {
		"setup": "yarn && yarn bower && yarn bootstrap && yarn build",
		"setup:deps": "yarn && yarn bootstrap",
		"bootstrap": "lerna bootstrap --ignore-scripts",
		"build": "lerna run prepublish",
		"bower": "lerna run bower",
		"lerna:publish": "lerna publish",
		"test": "lerna run test --concurrency=5",
		"demo": "lerna run --scope ozone-components-demo demo",
		"build:demo": "lerna run --scope ozone-components-demo build",
		"doc": "./scripts/generateDoc.sh",
		"publish_doc": "./scripts/publishDoc.sh",
		"doc:publish": "npm run doc && npm run publish_doc",
		"clean": "find . -name node_modules -exec rm -rf {} \\;",
		"tsc": "tsc"
	},
