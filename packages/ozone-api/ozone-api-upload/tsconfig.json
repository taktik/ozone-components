{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs", // Use esnext to enable lazy loading
    "moduleResolution": "node",
    "experimentalDecorators": true,
    //
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "es2017",
      "es6",
      "es5",
      "dom"
    ],
    "declaration": true,
    /* Generates corresponding '.d.ts' file. */
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./"
  },
  "include": [
    "./src",
    "./types/*"
  ]
}
