{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    //
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "es2017",
      "es6",
      "es5",
      "dom",
	  "esnext"
    ],
    "declaration": true,
    /* Generates corresponding '.d.ts' file. */
    "outDir": "./dist",
    "strict": true
  }
}
