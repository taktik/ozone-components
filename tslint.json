{
	"extends": "tslint-config-standard",
	"rules": {
		"indent": [
			true,
			"tabs",
			4
		],
		"ter-indent": [
			true,
			"tab"
		],
		"one-variable-per-declaration": [
			true,
			"ignore-for-loop"
		],
		"space-before-function-paren": [
			true,
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		]
	}
}
